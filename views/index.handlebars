<h1>Welcome to Eat-Da-Burger</h1>
<img>

<main>
    <div class="container">
        <div class="row">
            <div class="col-sm-5">
                <h3>Burgers Still Devour</h3>
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li>
                        {{burger_name}}
                        <button class="devoured-btn" data-id="{{this.id}}" data-devoured="{{this.devoured}}">
                            Devour
                        </button>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>

            <div>

            </div class="col-sm-5">
            Burgers Yet To Devour
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>

        </div>
        <div class="row">
            <div class="col-sm">
                <h3>Add a burger</h3>
                <form class="create-form">
                    <div class="form-group">
                        <label for="br">Burger Name:</label>
                        <input type="text" id="br" name="burger_name">
                    </div>
                    <button type="submit">Add burger</button>
                </form>
            </div>
        </div>

    </div>
    </div>


</main>

